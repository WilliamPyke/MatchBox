{
  "name": "matchbox",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:config": "prettier --check '**/*.{json,yaml,yml}'",
    "lint:config:fix": "prettier --write '**/*.{json,yaml,yml}'",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "prettier": "^3.4.1",
    "turbo": "^2.3.1"
  }
}
